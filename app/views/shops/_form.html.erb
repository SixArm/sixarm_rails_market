<%= form_for(@shop) do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %><%= t(:error_explanation_header) %></h2>

      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:Name) %><br/>
    <%= f.text_field :name_in_en %>
  </div>

  <div class="field">
    <%= f.label t(:Description) %><br/>
    <%= f.text_area :description_in_en %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
