<% size_short = 5 %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %><%= t(:error_explanation_header) %></h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:Name) %><br/>
    <%= f.text_field :name_in_en %>
  </div>

  <div class="field">
    <%= f.label t(:Description) %><br/>
    <%= f.text_field :description_in_en %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


